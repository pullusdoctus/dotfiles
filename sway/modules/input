# +-------+
# | Input |
# +-------+
# `man 5 sway-input`

input type:touchpad {
    tap enabled
    natural_scroll disabled
    dwt enabled
    middle_emulation enabled
    scroll_method two_finger
    click_method clickfinger
}

input type:pointer {
  tap enabled
  natural_scroll disabled
  dwt enabled
  middle_emulation enabled
  accel_profile "flat"
}

input type:keyboard {
  xkb_numlock on
}
